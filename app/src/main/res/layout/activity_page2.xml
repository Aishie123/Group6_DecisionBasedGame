<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Page2">

    <ImageView
        android:id="@+id/bgPage2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bg_kitchen" />

    <ImageView
        android:id="@+id/darkShade2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        android:src="@drawable/darkshade"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/txt2Dialogue"
        android:layout_width="398dp"
        android:layout_height="170dp"
        android:fontFamily="@font/nicoclean_regular"
        android:gravity="center"
        android:text="Dialogue"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btn2Choice1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bgPage2"
        app:layout_constraintVertical_chainStyle="spread" />


    <ImageButton
        android:id="@+id/btn2Choice1"
        android:layout_width="116dp"
        android:layout_height="60dp"
        android:padding="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/bgPage2"
        app:layout_constraintEnd_toStartOf="@+id/btn2Choice2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bgPage2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt2Dialogue"
        app:srcCompat="@drawable/btn_unpressed"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/btn2Choice2"
        android:layout_width="116dp"
        android:layout_height="60dp"
        android:padding="0dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/btn2Choice3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn2Choice1"
        app:layout_constraintTop_toTopOf="@+id/btn2Choice1"
        app:srcCompat="@drawable/btn_unpressed"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/btn2Choice3"
        android:layout_width="116dp"
        android:layout_height="60dp"
        android:padding="0dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/btn2Choice4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn2Choice2"
        app:layout_constraintTop_toTopOf="@+id/btn2Choice2"
        app:srcCompat="@drawable/btn_unpressed"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/btn2Choice4"
        android:layout_width="116dp"
        android:layout_height="60dp"
        android:padding="0dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn2Choice3"
        app:layout_constraintTop_toTopOf="@+id/btn2Choice3"
        app:srcCompat="@drawable/btn_unpressed"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/txt2Choice1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nicobold_regular"
        android:text="Choice 1"
        android:textColor="#5e6978"
        app:layout_constraintBottom_toBottomOf="@+id/btn2Choice1"
        app:layout_constraintEnd_toEndOf="@+id/btn2Choice1"
        app:layout_constraintStart_toStartOf="@+id/btn2Choice1"
        app:layout_constraintTop_toTopOf="@+id/btn2Choice1"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txt2Choice2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nicobold_regular"
        android:text="Choice 2"
        android:textColor="#5e6978"
        app:layout_constraintBottom_toBottomOf="@+id/btn2Choice2"
        app:layout_constraintEnd_toEndOf="@+id/btn2Choice2"
        app:layout_constraintStart_toStartOf="@+id/btn2Choice2"
        app:layout_constraintTop_toTopOf="@+id/btn2Choice2"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txt2Choice3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nicobold_regular"
        android:text="Choice 3"
        android:textColor="#5e6978"
        app:layout_constraintBottom_toBottomOf="@+id/btn2Choice3"
        app:layout_constraintEnd_toEndOf="@+id/btn2Choice3"
        app:layout_constraintStart_toStartOf="@+id/btn2Choice3"
        app:layout_constraintTop_toTopOf="@+id/btn2Choice3"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txt2Choice4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nicobold_regular"
        android:text="Choice 4"
        android:textColor="#5e6978"
        app:layout_constraintBottom_toBottomOf="@+id/btn2Choice4"
        app:layout_constraintEnd_toEndOf="@+id/btn2Choice4"
        app:layout_constraintStart_toStartOf="@+id/btn2Choice4"
        app:layout_constraintTop_toTopOf="@+id/btn2Choice4"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/btn2Restart"
        android:layout_width="116dp"
        android:layout_height="60dp"
        android:layout_marginBottom="60dp"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/bgPage2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/btn_unpressed"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/txt2Restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nicobold_regular"
        android:text="Restart"
        android:visibility="gone"
        android:textColor="#5e6978"
        app:layout_constraintBottom_toBottomOf="@+id/btn2Restart"
        app:layout_constraintEnd_toEndOf="@+id/btn2Restart"
        app:layout_constraintStart_toStartOf="@+id/btn2Restart"
        app:layout_constraintTop_toTopOf="@+id/btn2Restart"
        tools:ignore="HardcodedText" />

    <VideoView
        android:id="@+id/death2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>